@inherits LayoutComponentBase

<PageTitle>TrantecCommunicator.Web</PageTitle>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">S5 Control</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavMenuCssClass" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <NavLink class="nav-link" href="list">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Receivers
                </NavLink>

                <NavLink class="nav-link" href="presets" style="display:none;">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Presets
                </NavLink>

                <NavLink class="nav-link" href="tools">
                    <span class="oi oi-cog" aria-hidden="true"></span> Tools
                </NavLink>
                <NavLink class="nav-link" href="log">
                    <span class="oi oi-monitor" aria-hidden="true"></span> log
                </NavLink>
            </div>
        </div>
    </div>
</nav>

<div class="page">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? null : "show";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
